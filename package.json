{
  "name": "nsri",
  "version": "3.0.0",
  "description": "Node.js utility tool for creating and checking subresource integrity",
  "license": "MIT",
  "author": {
    "email": "jimikar@gmail.com",
    "name": "Jimi (Dimitris) Charalampidis"
  },
  "repository": {
    "type": "git",
    "url": "JimiC/nsri"
  },
  "bugs": {
    "url": "https://github.com/JimiC/nsri/issues"
  },
  "homepage": "https://github.com/JimiC/nsri#readme",
  "engines": {
    "node": "8.* || >= 10.*"
  },
  "keywords": [
    "node",
    "nodejs",
    "cli",
    "integrity",
    "checker",
    "check",
    "validation",
    "file",
    "files",
    "folder",
    "forders",
    "directory",
    "directories",
    "structure",
    "hash",
    "checksum",
    "checksums",
    "nsri"
  ],
  "main": "lib/index.js",
  "bin": {
    "nsri": "lib/cli.js"
  },
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "node ./out/src/cli.js",
    "lint-staged": "lint-staged",
    "lint": "tslint -p .",
    "build:dev": "npm run build -- -p tsconfig.dev.json",
    "prebuild": "npm run cleanup && npm run lint",
    "build": "tsc",
    "cleanup": "rimraf ./.nyc_output ./coverage ./out ./lib",
    "copy-dist": "cpx \"out/src/**/*\" lib",
    "pretest": "npm run build:dev",
    "test": "nyc mocha",
    "posttest": "nyc report -r lcov",
    "prepublishOnly": "npm run build && npm run copy-dist"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "cosmiconfig": "^5.2.0",
    "detect-indent": "^6.0.0",
    "minimatch": "^3.0.4",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/chai": "^4.1.7",
    "@types/detect-indent": "^5.0.0",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.6",
    "@types/node": "6",
    "@types/sinon": "^7.0.11",
    "@types/yargs": "^13.0.0",
    "chai": "^4.2.0",
    "cpx": "^1.5.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
